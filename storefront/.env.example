# Medusa Backend Configuration
# Update this to your Railway backend URL
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://your-backend.railway.app

# Medusa Publishable API Key (required for store access)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key_here

# Store URL Configuration
# Update this to your deployed frontend URL
NEXT_PUBLIC_BASE_URL=https://your-storefront.railway.app

# Default Region
NEXT_PUBLIC_DEFAULT_REGION=us

# Stripe Configuration
# Live keys for payment processing
NEXT_PUBLIC_STRIPE_KEY=pk_live_your_stripe_publishable_key_here

# MeiliSearch Configuration (if using search)
# NEXT_PUBLIC_SEARCH_ENDPOINT=http://localhost:7700
# NEXT_PUBLIC_SEARCH_API_KEY=your_search_key_here
# NEXT_PUBLIC_INDEX_NAME=products